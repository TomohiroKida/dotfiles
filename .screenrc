defutf8 on
defencoding utf8
encoding utf8 utf8
maptimeout 0

startup_message off
vbell off

attrcolor b ".I"
defbce on
termcapinfo xterm* 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

term xterm

defscrollback 10000

escape ^Tt

# option: underline(u) bold(b) reverse(r) dim(dim) emphasis(s) bright(B)
# color:  black(k) red(r) green(g) yellow(y) b(blue) m(magenta)
#         c(cyan) w(white) d(default) .(not change)
setenv BaseColor   "%{= cm}"
setenv ActColor    "%{= mc}"
setenv NonActColor "%{= cm}"
setenv a "$a$BaseColor" 
setenv a "$a "
setenv a "$a%-w"            # active windows 's num and title
setenv a "$a$ActColor" 
setenv a "$a%n"             # window num
setenv a "$a " 
setenv a "$a%t"             # window title
setenv a "$a$NonActColor"
setenv a "$a%+w"            # non-active windows 's num and title
setenv a "$a "
setenv a "$a$BaseColor" 
setenv a "$a%-0<%="         # set from right 0
setenv a "$a%02c:%s"        # HH:MM 24 hours and sec
hardstatus alwayslastline "$a"

shell bash
